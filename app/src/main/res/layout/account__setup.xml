<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:id="@+id/account_setup">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wall Street Fantasy Account Setup"
        android:id="@+id/textView2"
        android:layout_row="0"
        android:layout_column="1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/imageView"
        android:layout_row="1"
        android:layout_column="1"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to Wall Street Fantasy League. Please enter the following information so we can create an account for you."
        android:id="@+id/textView"
        android:layout_row="2"
        android:layout_column="1" />

    <EditText
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="First name"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_weight="1"
        android:layout_row="3"
        android:layout_column="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Last name"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_weight="1"
        android:layout_row="3"
        android:layout_column="3" />

    <EditText
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Last name"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_row="4"
        android:layout_column="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_row="5"
        android:layout_column="1"
        android:text="Enter email address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_row="6"
        android:layout_column="1"
        android:text="Confirm email address" />

    <EditText
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_row="7"
        android:layout_column="1"
        android:text="New password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_row="8"
        android:layout_column="1"
        android:text="Confirm password" />

    <Button
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/button"
        android:layout_row="13"
        android:layout_column="1" />

</GridLayout>